<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="age" value="20"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="name" value="Amrit"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="45"/>
        <constructor-arg index="1" value="Female"/>
        <constructor-arg index="2" value="Lavi"/>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg type="int" value="60"/>
        <constructor-arg type="java.lang.String" value="Male"/>
        <constructor-arg type="java.lang.String" value="Guri"/>
    </bean>

    <bean name="movie1,movie5" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg ref="actor1"/>
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg ref="actor2"/>
    </bean>

    <bean id="movie3" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg ref="actor3"/>
    </bean>
</beans>