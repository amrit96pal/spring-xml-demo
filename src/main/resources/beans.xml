<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="age" value="20"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="name" value="Amrit"/>
    </bean>

    <bean name="movie1" class="com.stackroute.domain.Movie" scope="prototype" autowire="constructor" init-method="customInit" destroy-method="customDestroy">
    </bean>
    <bean id="lifecycle" class="com.stackroute.demo.BeanLifecycleDemoBean">
    </bean>
</beans>